<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Course_Planner_Felix_Berinde.Views.Dashboard">
    <NavigationPage.TitleView>
    <Label Text="Project Skills" FontSize="Medium"></Label>
    </NavigationPage.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="AddGadget" Text="Add Gadget" Clicked="AddGadget_OnClicked"></ToolbarItem>
        <ToolbarItem x:Name="ViewGadgets" Text="View Gadgets" Clicked="ViewGadgets_OnClicked"></ToolbarItem>
        <ToolbarItem x:Name="Settings" Text="Settings" Order="Secondary" Clicked="Settings_OnClicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Dashboard!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>